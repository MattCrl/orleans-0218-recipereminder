<div class="col-xs-12 col-sm-6 col-md-4">
<a href="/admin/recipe/{{ recipe.id }}">

    <figure class="thumbnail">
        {% if recipe.img is empty %}
        <img src="/assets/images/recipePlaceHolder.jpg" alt="recipe without image" class="">
        {% else %}
        <img src="/assets/upload/{{ recipe.img }}" alt="{{ recipe.name }}" class="">
        {% endif %}
        <figcaption class="caption">
            <h3>{{ recipe.name |capitalize }}</h3>

            <p>{{ recipe.category |capitalize  }}</p>
        </figcaption>
        <form action="/recipe/deleteLinkEvent/{{ recipe.id }}" method="POST">
            <input type="hidden" name="id" value="{{ recipe.id }}">
            <button type="submit" class="btn delinkBtn">DÃ©sindexer la recette</button>
        </form>
    </figure>

</a>
</div>
