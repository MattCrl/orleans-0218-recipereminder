{% extends 'Admin/admin_layout.html.twig' %}

{% block content %}
    <h1>Administration des recettes</h1>

        <div class="text-center">
            <a href="addRecipe"><button class="btn">Ajouter une recette</button></a>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm-5">
                     <table class="table table-hover table-bordered text-center">
                         <thead>
                             <tr>
                                 <th>Recettes</th>
                             </tr>
                         </thead>
                         <tbody>
                         {% for recipe in recipes %}
                            <tr>
                                <td>{{ recipe.name }}</td>
                            </tr>
                            {% endfor %}
                         </tbody>
                     </table>
                </div>
            </div>
        </div>
{% endblock %}
