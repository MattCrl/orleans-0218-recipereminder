{% extends 'Admin/admin_layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/recipe-event.css">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <h1 class="text-center itemHeader">{{ recipe.name|capitalize }}</h1>
            <hr>

                <div class="col-xs-12 col-md-6">
                    <h3 class="text-left">{{ recipe.category|capitalize }}</h3>
                </div>

        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                {% if recipe.img is empty %}
                    <img src="/assets/images/recipePlaceHolder.jpg" alt="recipe without image" />
                {% else %}
                    <img src="/assets/upload/{{ recipe.img }}" alt="{{ recipe.name }}" />
                {% endif %}
            </div>

            <div class="col-xs-12 col-md-6">
                <p class="comment"><q>{{ recipe.comment }}</q></p>
            </div>
        </div>

        <div>
            <a class="btn backBtn" href="/admin/recipeList" role="button"><span class="glyphicon glyphicon-chevron-left"></span> Liste des recettes</a>
            <a class="btn backBtn btnBlack" href="/admin/updateRecipe/{{ recipe.id }}" role="button"> Modifier la recette</a>
            <button type="button" class="btn backBtn btnBlack" data-toggle="modal" data-target="#deleteRecipeModal">
                Supprimer la recette
            </button>
            <button type="button" class="btn backBtn" data-toggle="modal" data-target="#linkEventsModal">
                <span class="glyphicon glyphicon-resize-small"></span>  Associer un événement
            </button>
            {% if recipe.url is not empty %}
                <a class="btn backBtn" href="{{ recipe.url }}" role="button" target="_blank">Ma recette sur le web</a>
            {% elseif recipe.book is not empty %}
                <p class="text-left itemRef"><b>Référence:</b> {{ recipe.book }}</p>
            {% endif %}
        </div>

        <div class="container">
            <h2>Recettes associées</h2>
            <div class="row">
                {% for event in showEvents %}
                    {% include 'Admin/thumb-event-admin.html.twig' %}
                {% else %}
                    <h4>Aucune recette à afficher</h4>
                {% endfor %}
            </div>
        </div>

        <!-- linkEventsModal -->
        <div class="modal fade" id="linkEventsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Sélectionnez l'événement à associer à la recette : {{ recipe.name }}</h4>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/admin/event/search" id="formSeekEvent" class="form-inline">
                            <input type="hidden" value="0" id="page" name="page">
                            <div class="form-group">
                                <label for="name">Entrez le nom de l'événement à associer: </label>
                                <input type="text" name="name" id="name" class="form-control"
                                       placeholder="Quels événements cherchez-vous?">

                            </div>
                            <div class="form-group">
                                <label for="dateStart">de :</label>
                                <input type="date" name="dateStart" id="dateStart" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="dateEnd">à :</label>
                                <input type="date" name="dateEnd" id="dateEnd" class="form-control">
                            </div>
                        </form>
                        <div id="list" class="text-center">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn" data-dismiss="modal">Retour</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- deleteRecipeModal -->
        <div class="modal fade" id="deleteRecipeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Suppression de la recette</h4>
                    </div>
                    <div class="modal-body">
                        Êtes-vous sûr de vouloir supprimer la recette ?
                    </div>
                    <div class="modal-footer">
                        <form action="/recipe/delete" method="POST">
                            <input type="hidden" name="id" value="{{ recipe.id }}">
                            <button type="button" class="btn backBtn" data-dismiss="modal">Retour</button>
                            <button type="submit" class="btn backBtn">Supprimer la recette</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
