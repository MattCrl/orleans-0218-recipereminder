{% extends 'Admin/admin_layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/recipe.css">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <h1 class="text-center itemHeader">{{ recipe.name|capitalize }}</h1>
            <hr>

                <div class="col-xs-12 col-md-6">
                    <h3 class="text-left">{{ recipe.category|capitalize }}</h3>
                </div>

        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                {% if recipe.img is empty %}
                    <img src="/assets/images/recipePlaceHolder.jpg" alt="recipe without image" class="img-responsive" />
                {% else %}
                    <img src="/assets/upload/{{ recipe.img }}" alt="{{ recipe.name }}" class="img-responsive" />
                {% endif %}
            </div>

            <div class="col-xs-12 col-md-6">
                <p class="comment"><q>{{ recipe.comment }}</q></p>
            </div>
        </div>

        <div>
            <a class="btn backBtn" href="/recipe" role="button"><span class="glyphicon glyphicon-chevron-left"></span> Liste des recettes</a>
            {% if recipe.url is not empty %}
                <a class="btn backBtn" href="{{ recipe.url }}" role="button" target="_blank">Ma recette sur le web</a>
            {% elseif recipe.book is not empty %}
                <p class="text-left itemRef"><b>Référence:</b> {{ recipe.book }}</p>
            {% endif %}

                <button type="button" class="btn backBtn " data-toggle="modal" data-target="#myModal">
                    Supprimer la recette
                </button>
        </div>


        <!-- MODAL -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Suppression de la recette</h4>
                    </div>
                    <div class="modal-body">
                        Êtes-vous sûr de vouloir supprimer la recette ?
                    </div>
                    <div class="modal-footer">
                        <form action="/recipe/delete" method="POST">
                            <input type="hidden" name="id" value="{{ recipe.id }}">
                            <button type="button" class="btn backBtn" data-dismiss="modal">Retour</button>
                            <button type="submit" class="btn backBtn">Supprimer la recette</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>

{% endblock %}
