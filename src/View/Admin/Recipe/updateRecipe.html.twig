{% extends 'Admin/admin_layout.html.twig' %}

{% block content %}

    <div class="container">
        <h1>Ajouter recette</h1>
        {% if errors is not empty %}
            <div class="alert alert-danger">{{ errors }}</div>
        {% endif %}
        <form method="post" action="" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Recette nom</label>
                <input type="name" class="form-control" id="name" name="name" value="{{ data.name }}"
                       placeholder="ex: Boeuf Bourguignon">
            </div>
            <div class="form-group">
                <label for="categoryId">Catégorie</label>
                <select class="form-control" id="categoryId" name="categoryId">
                    {% for category in categories %}
                        <option value="{{ category.id }}"> - {{ category.name|capitalize }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="img">Ajouter lien image</label>
                <input type="file" name="img" id="img">
            </div>
            <div class="form-group">
                <label for="book">Référence livre / magazine</label>
                <input type="text" class="form-control" id="book" name="book" value="{{ data.book }}"
                       placeholder="ex: La cuisine française (Jean Bon, édition Miam) p.45 / Cuisine magazine n°34 p.22">
            </div>
            <div class="form-group">
                <label for="url">Référence site</label>
                <input type="text" class="form-control" id="url" name="url" value="{{ data.url }}"
                       placeholder="ex: www.marecette.com">
            </div>
            <div class="form-group">
                <label for="comment">Commentaire</label>
                <textarea class="form-control" id="comment" name="comment" rows="5">{{ data.comment }}</textarea>
            </div>
            <button type="submit" class="btn">Ajouter recette</button>
        </form>
    </div>
{% endblock %}