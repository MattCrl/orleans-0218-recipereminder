{% extends 'Admin/admin_layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/tables.css">
{% endblock %}
{% block content %}
    <div class="container">
    <h1>Administration des événements</h1>

        <div class="text-center">
            <a href="/admin/addEvent"><button class="btn">Ajouter un Evénement</button></a>
        </div>

            <div class="row listed">
                {% for event in events %}
                    <div class="media col-xs-4">
                        <div class="media-left">
                            <a href="/admin/event/{{ event.id }}">

                                {% if event.img is empty %}
                                    <img class="media-object" src="/assets/images/eventPlaceHolder.jpg" alt="event without image" class="">
                                {% else %}
                                    <img class="media-object" src="/assets/upload/{{ event.img }}" alt="{{ event.name }}" class="">
                                {% endif %}

                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">{{ event.name |capitalize }}</h4>
                            <p>{{ event.date|date("d / m / Y") }}</p>
                        </div>
                    </div>

                {% endfor %}

                {#<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12">
                     <table class="table table-hover table-bordered table-center">
                         <thead>
                             <tr>
                                 <th>ÉVÉNEMENTS</th>
                                 <th>DATE</th>
                             </tr>
                         </thead>
                         <tbody>
                         {% for event in events  %}
                            <tr>
                                <td>{{ event.name |capitalize }}</td>
                                <td>{{ event.date|date("d / m / Y") }}</td>
                            </tr>
                            {% endfor %}
                         </tbody>
                     </table>
                </div>#}
            </div>
        </div>
{% endblock %}
