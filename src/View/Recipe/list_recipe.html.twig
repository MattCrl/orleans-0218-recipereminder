{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container>">
        <h1 class="text-center">Recettes</h1>
        <div id="list">
            <div class="row">

            {% for recipe in recipes %}
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <a href="/recipe/{{ recipe.id }}"><figure class="thumbnail">
                        {% if recipe.img is empty %}
                            <img src="../assets/images/thumbtest3.jpg" alt="recipe without image" class="">
                        {% else %}
                            <img src="../assets/images/{{ recipe.img }}" alt="{{ recipe.name }}" class="">
                        {% endif %}
                        <figcaption class="caption">
                            <h3>{{ recipe.name|capitalize }}</h3>
                            <p>{{ recipe.category|capitalize }}</p>
                        </figcaption>
                        </figure></a>
                </div>
            {% else %}
                <p> Aucun élément à afficher.</p>
            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
