{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <h1 class="text-center itemHeader">{{ recipe.name|capitalize }}</h1>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <h3 class="text-left">{{ recipe.category|capitalize }}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                {% if recipe.img is empty %}
                    <img src="../assets/images/thumbtest3.jpg" alt="recipe without image" class="itemImg" />
                {% else %}
                    <img src="../assets/images/{{ recipe.img }}" alt="{{ recipe.name }}" class="itemImg" />
                {% endif %}
            </div>
            <div class="col-xs-12 col-md-6">
                <p class="comment"><q>{{ recipe.comment }}</q></p>
            </div>
        </div>
        <h3 class="text-center refTitle">Références:</h3>
        <p class="text-center itemRef"><b>Sur le web:</b><a href="{{ recipe.url }}"> {{ recipe.url }}</a></p>
        <p class="text-center itemRef"><b>Livre/Magazine:</b> {{ recipe.book }}</p>
    </div>

{% endblock %}
